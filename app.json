{
  "expo": {
    "name": "Voice Notes AI",
    "slug": "voice-notes-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "voicenotesai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6750A4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.voicenotesai.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Voice Notes AI needs access to your microphone to record meetings and voice notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6750A4"
      },
      "package": "com.voicenotesai.app",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Voice Notes AI needs access to your microphone to record meetings and voice notes."
        }
      ]
    ]
  }
}
