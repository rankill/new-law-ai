# Firebase (required)
# Get these from https://console.firebase.google.com/ → Project Settings → Your Apps
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=

# Deepgram - Transcription (required)
# Get a free API key at https://deepgram.com/
EXPO_PUBLIC_DEEPGRAM_API_KEY=

# AI Chat (required)
# Default: Groq (free) - get key at https://console.groq.com/
EXPO_PUBLIC_AI_API_KEY=

# AI Chat - Optional overrides (defaults to Groq)
# EXPO_PUBLIC_AI_BASE_URL=https://api.groq.com/openai/v1
# EXPO_PUBLIC_AI_MODEL=llama-3.3-70b-versatile
